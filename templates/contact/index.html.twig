{% extends 'base.html.twig' %}

{% block title %}Contact - Julien FONT{% endblock %}

{% block body %}
    <section class="bg-light" style="padding-top: 80px; min-height: 80vh;">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h1 class="section-title">Contactez-moi</h1>

                    <div class="card">
                        <div class="card-body p-4">
                            <form id="contactForm">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Nom complet *</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email *</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>

                                <div class="mb-3">
                                    <label for="subject" class="form-label">Sujet *</label>
                                    <input type="text" class="form-control" id="subject" name="subject" required>
                                </div>

                                <div class="mb-3">
                                    <label for="message" class="form-label">Message *</label>
                                    <textarea class="form-control" id="message" name="message" rows="6" required></textarea>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-send me-2"></i>Envoyer le message
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const subject = document.getElementById('subject').value;
            const message = document.getElementById('message').value;
            
            const body = encodeURIComponent(
                'Bonjour,\n\n' +
                'Je vous contacte depuis votre portfolio.\n\n' +
                '---\n' +
                'Nom: ' + name + '\n' +
                'Email: ' + email + '\n' +
                '---\n\n' +
                message + '\n\n' +
                'Cordialement,\n' +
                name
            );
            
            const mailtoLink = 'mailto:julienfontamine1@gmail.com?subject=' + 
                              encodeURIComponent('Contact Portfolio: ' + subject) + 
                              '&body=' + body;
            
            window.location.href = mailtoLink;
        });
    </script>
{% endblock %}

