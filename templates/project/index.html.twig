{% extends 'base.html.twig' %}

{% block title %}Projets - Julien FONT{% endblock %}

{% block body %}
    <section class="bg-light" style="padding-top: 30px; padding-bottom: 3rem;">
        <div class="container">
            <h1 class="mb-4" style="margin-top: 0;">Mes Projets</h1>
            <div class="row">
                {% for project in projects %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 project-card">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-center mb-3 w-100">
                                    <span class="badge status-badge status-{{ project.status == 'En cours' ? 'ongoing' : 'completed' }}">
                                        {{ project.status }}
                                    </span>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>{{ project.date }}
                                    </small>
                                </div>
                                <h5 class="card-title mb-3">{{ project.title }}</h5>
                                <p class="card-text text-muted mb-3 flex-grow-1">{{ project.description }}</p>
                                <div class="mb-3">
                                    {% for tech in project.technologies|slice(0, 4) %}
                                        <span class="badge tech-badge me-1 mb-1">{{ tech }}</span>
                                    {% endfor %}
                                    {% if project.technologies|length > 4 %}
                                        <span class="badge tech-badge">+{{ project.technologies|length - 4 }}</span>
                                    {% endif %}
                                </div>
                                <a href="{{ path('project_detail', {slug: project.slug}) }}" class="btn btn-outline-dark mt-auto">
                                    Voir les détails →
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

