{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - Julien FONT{% endblock %}

{% block body %}
    <section class="bg-light" style="padding-top: 120px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('projects') }}">Projets</a></li>
                            <li class="breadcrumb-item active">{{ project.title }}</li>
                        </ol>
                    </nav>

                    <div class="card">
                        <div class="card-body">
                            <h1 class="mb-3">{{ project.title }}</h1>
                            
                            <div class="mb-4">
                                <span class="badge bg-{{ project.status == 'En cours' ? 'success' : 'secondary' }} me-2">
                                    {{ project.status }}
                                </span>
                                <span class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>{{ project.date }}
                                </span>
                            </div>

                            <p class="lead mb-4">{{ project.description }}</p>

                            {% if project.my_role is defined %}
                                <div class="mb-4 p-3 rounded" style="background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%); border-left: 4px solid var(--primary-color);">
                                    <h5 class="mb-2">
                                        <i class="bi bi-person-badge text-primary me-2"></i>Mon rôle
                                    </h5>
                                    <p class="mb-0">{{ project.my_role }}</p>
                                </div>
                            {% endif %}

                            {% if project.achievement is defined %}
                                <div class="mb-4 p-3 rounded" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border-left: 4px solid #f59e0b;">
                                    <h5 class="mb-2">
                                        <i class="bi bi-trophy text-warning me-2"></i>Ce que j'ai accompli
                                    </h5>
                                    <p class="mb-0">{{ project.achievement }}</p>
                                </div>
                            {% endif %}

                            <div class="mb-4">
                                <h3>Description détaillée</h3>
                                <p>{{ project.long_description }}</p>
                            </div>

                            {% if project.learned is defined %}
                                <div class="mb-4 p-3 rounded" style="background: #f8f9fa; border-left: 4px solid #10b981;">
                                    <h5 class="mb-2">
                                        <i class="bi bi-lightbulb text-success me-2"></i>Ce que j'ai appris
                                    </h5>
                                    <p class="mb-0">{{ project.learned }}</p>
                                </div>
                            {% endif %}

                            {% if project.improvements is defined %}
                                <div class="mb-4 p-3 rounded" style="background: #f8f9fa; border-left: 4px solid #8b5cf6;">
                                    <h5 class="mb-2">
                                        <i class="bi bi-arrow-up-circle text-secondary me-2"></i>Ce que j'améliorerais aujourd'hui
                                    </h5>
                                    <p class="mb-0">{{ project.improvements }}</p>
                                </div>
                            {% endif %}

                            {% if project.features|length > 0 %}
                                <div class="mb-4">
                                    <h3>Fonctionnalités</h3>
                                    <ul class="list-unstyled">
                                        {% for feature in project.features %}
                                            <li class="mb-2">
                                                <i class="bi bi-check-circle-fill text-primary me-2"></i>{{ feature }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}

                            <div class="mb-4">
                                <h3>Technologies utilisées</h3>
                                <div>
                                    {% for tech in project.technologies %}
                                        <span class="badge bg-primary me-1 mb-2" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                            {{ tech }}
                                        </span>
                                    {% endfor %}
                                </div>
                            </div>

                            {% if project.link or project.github %}
                                <div class="mb-4">
                                    <h3>Liens</h3>
                                    <div>
                                        {% if project.link %}
                                            <a href="{{ project.link }}" target="_blank" class="btn btn-primary me-2">
                                                <i class="bi bi-box-arrow-up-right me-1"></i>Voir le projet
                                            </a>
                                        {% endif %}
                                        {% if project.github %}
                                            <a href="{{ project.github }}" target="_blank" class="btn btn-outline-dark">
                                                <i class="bi bi-github me-1"></i>Code source
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}

                            <div class="mt-4">
                                <a href="{{ path('projects') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Retour aux projets
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

